@page "/"
@page "/box/{Guid:guid}"
@using MatBlazor
@using System.Net.Mime
@using System.IO
@using BoxProtocol
@using Grpc.Core
@using MagicOnion.Client
@using BoxProtocol.Interfaces;
@using BoxProtocol.Models;
<h1>Place Rating App</h1>

@code
{ [Parameter]
    public Guid Guid { get; set; }
}
@code
{
    public async Task<List<Item>> GetAllItems()
    {
        var channel = new Channel("localhost", 12345, ChannelCredentials.Insecure);
        var DataStore = MagicOnionClient.Create<IServerDB>(channel);
        var items = await DataStore.GetAll();
        return items;
    }
    List<Item> _Items = new List<Item>();
    public List<Item> Items
    {
        get
        {
            return _Items;
        }
        set
        {
            _Items = value;
        }
    }
    protected override async Task OnInitializedAsync()
    {
        Items = await GetAllItems();
    }
}

<MatCard class="demo-mat-card mat-elevation-z24">
    <MatCardContent>
        <div style="padding:50px;">
            <div class="demo-mat-card-content">
                <MatHeadline6 class="demo-mat-card-clean-margin">
                    HISTORY
                </MatHeadline6>
            </div>

            <table>
                @{
                    int counter = 0;
                }
                <tr style="font-weight:bold;">
                    <td style="text-align:center;">
                        Number
                    </td>
                    <td>
                        Id
                    </td>
                    <td>
                        Name
                    </td>
                    <td>
                        Place image
                    </td>
                    <td>
                        Place name
                    </td>
                    <td>
                        Place rating
                    </td>
                    <td>
                        Place location Longitude
                    </td>
                    <td>
                        Place location Latitude
                    </td>
                    <td>
                        Place description
                    </td>
                    <td>
                        Time created
                    </td>
                </tr>
                @foreach (var item in Items)
                {
                    <tr style="align-items:center;">
                        @{counter++;}
                        <td style="font-weight:bold;">
                            @counter
                        </td>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <!--item.Place_image_path-->
                        </td>
                        <td>
                            @item.Place_name
                        </td>
                        <td>
                            @item.Place_rating
                        </td>
                        <td>
                            @item.Place_location_Longitude
                        </td>
                        <td>
                            @item.Place_location_Latitude
                        </td>
                        <td>
                            @item.Place_description
                        </td>
                        <td>
                            @item.Time_created
                        </td>
                    </tr>
                }
            </table>
        </div>
    </MatCardContent>
</MatCard>
